<project
    name="ibis.apps.satin.barnes_inline"
    default="build"
    basedir=".">

    <property environment="env"/>

    <property name="ibis"        location="${env.IBIS_ROOT}"/>
    <property name="build"       value="build"/>

    <property name="satinc-flags" value="-keep"/>
    <property name="satinsoc-flags" value="-keep"/>
    <property name="main-class" value="BarnesHut"/>
    <property name="satin-main-class" value="${main-class}"/>
    <property name="satin-so-classes" value="Bodies"/>

    <property name="test-par-java-args" value="-Dsatin.so=true"/>
    <property name="test-par-run" value="BarnesHut -v 100 5 -satin-closed"/>
    <property name="test-seq-java-args" value="-Dsatin.so=true"/>
    <property name="test-seq-run" value="BarnesHut -v 100 5 -satin-closed"/>

    <fileset dir="." id="src.excludes-ref">
	<include name="BodyCanvas.java"/>
    </fileset>

    <import file="${ibis}/build-files/apps/build-satin-app.xml"/>

</project>


