<project
    name="ibis.apps.satin.sat4satin"
    default="build"
    basedir=".">

    <property environment="env"/>

    <property name="ibis"        location="${env.IBIS_ROOT}"/>
    <property name="build"       value="build"/>

    <property name="main-class" value="org.sat4j.Lanceur"/>
    <property name="satin-main-class" value="${main-class}"/>
    <property name="satinc-flags" value="-verbose org.sat4j.minisat.core.SolverSpawner org.sat4j.minisat.core.Solver"/>
    <property name="satin-so-classes" value="org.sat4j.minisat.core.SolverState"/>

    <property name="test-par-java-args" value="-Dsatin.so=true"/>
    <property name="test-par-run" value="org/sat4j/Lanceur -satin-closed"/>
    <property name="test-seq-java-args" value="-Dsatin.so=true"/>
    <property name="test-seq-run" value="org/sat4j/Lanceur -satin-closed"/>

    <import file="${ibis}/build-files/apps/build-satin-app.xml"/>

</project>


