<project
    name="ibis.apps.satin.sat4satin"
    default="build"
    basedir=".">

    <property environment="env"/>

    <property name="ibis"        location="${env.IBIS_HOME}"/>
    <property name="build"       value="build"/>

    <path id="classpath">
	<fileset dir="lib">
	    <include name="*.jar"/>
	</fileset>
    </path>

    <property name="main-class" value="org.sat4j.Lanceur"/>
    <property name="satin-main-class" value="${main-class}"/>
    <property name="satin-classes" value="org.sat4j.Lanceur,org.sat4j.minisat.core.SolverSpawner,org.sat4j.minisat.core.SolverState"/>
    <property name="user-classpath" refid="classpath"/>

    <!-- does not work. TODO: find out how to run it ...
    <property name="test-par-java-args" value="-Dsatin.closed"/>
    <property name="test-par-run" value="org.sat4j.Lanceur"/>
    <property name="test-seq-java-args" value="-Dsatin.closed"/>
    -->

    <import file="${ibis}/build-files/apps/build-satin-app.xml"/>

</project>

