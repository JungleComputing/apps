
    &sharedProperties;

    &iogenTargets;
    &nativeTargets;
    &satinTargets;


    <target name="init">
	<tstamp/>
	<mkdir dir="${build}"/>
    </target>

    <target name="compile"
	    depends="init,property-init">
	<javac  destdir="${build}"
		debug="${java.debug.value}"
		srcdir=".">
	    <classpath refid="default.classpath"/>
	    <include name="*.java"/>
	</javac>
    </target>

    <target name="build"
	    depends="init">
	<antcall inheritAll="true" inheritRefs="true" target="compile"/>
	<antcall inheritRefs="true" target="satin"/>
	<antcall inheritRefs="true" target="iogen"/>
    </target>

    <target name="clean">
	<delete dir="${build}"/>
    </target>


