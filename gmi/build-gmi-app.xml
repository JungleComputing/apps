<project
    name="gmi-app"
    default="build"
    basedir=".">

    <description>
	Ibis gmi application build.
    </description>

    <property environment="env"/>

    <property name="ibis"        location="${env.IBIS_HOME}"/>

    <import file="${ibis}/build-files/build-properties.xml"/>
    <import file="${ibis}/build-files/apps/build-app.xml"/>

    <target name="gmi">
	<java   classname="ibis.frontend.Ibisc"
		taskname="Ibisc"
		failonerror="true"
		dir="${build}"
		fork="true">
		<arg line="-gmi ."/>
	    <classpath refid="default.classpath"/>
	</java>
    </target>

    <target name="build"
	    depends="compile, gmi"
	    description="Compile a GMI program"/>

</project>
